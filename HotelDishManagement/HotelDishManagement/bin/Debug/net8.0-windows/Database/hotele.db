
CREATE TABLE IF NOT EXISTS Dishes (
    Number INTEGER PRIMARY KEY,       -- Unique identifier for each dish
    Name TEXT NOT NULL,               -- Name of the dish
    Price REAL NOT NULL,              -- Price of the dish
    Introduction TEXT,                -- Brief description of the dish
    Category TEXT NOT NULL,           -- Category the dish belongs to
    Type TEXT NOT NULL,               -- Type (e.g., Meat, Vegetarian, Vegan)
    ImagePath TEXT                    -- File path to the dish image (optional)
);

